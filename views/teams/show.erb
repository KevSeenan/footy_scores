<h2>Team Details</h2>
<hr />
  <p> Name: <%= @team.name() %> </p>
  <p> League: <%= @team.league.name() %> </p>
  <p> Team Stats: </p>

    <% for match in @team.matches() %>
        <p> P: <%= match.games_played %> </p>
        <p> W: <%= match.games_won %> </p>
        <p> L: <%= match.games_lost %> </p>
        <p> GF: <%= match.goals_for %> </p>
        <p> GA: <%= match.goals_against %> </p>
        <p> Points: <%= match.points %> </p>
    <% end %>
<hr />

<!-- Deletes team from list -->
<form action="/teams/<%= @team.id %>/delete" method="POST">
  <input type="submit" value="Delete Team">
</form>
