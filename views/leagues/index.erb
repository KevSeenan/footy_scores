<!-- Dispalys all leagues added by user -->
<h2>My Leagues:</h2>
<hr />
<% for league in @leagues %>
  <p> League Name: <%= league.name()%> </p>
  <form action="/leagues/<%= league.id %>" method="GET">
    <input type="submit" value="Show League">
  </form>
  <hr />
<% end %>

<!-- Adds link so cust can add a league to their list -->
<form action="/leagues/new" method="GET">
  <input type="submit" value="Add League">
</form>
