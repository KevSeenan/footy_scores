<h3>League Details</h3>
<hr />
  <p> League Name: <%= @league.name() %> </p>
  <h3> Teams:   </h3>
  <% for team in @league.teams() %>
    <ul>
      <li><%= team.name() %></li>
    </ul>
  <% end %>
<hr />



<!-- Deletes league from list -->
<form action="/leagues/<%= @league.id %>/delete" method="POST">
  <input type="submit" value="Delete League">
</form>

<!-- Edits league -->
<a href="/leagues/<%= @league.id %>/edit">Edit League</a>
